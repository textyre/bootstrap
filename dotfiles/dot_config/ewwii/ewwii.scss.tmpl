// ============================================================
// Ewwii Styles — Floating Islands Theme
// Generated by chezmoi — DO NOT EDIT DIRECTLY
// ============================================================
{{- $t := index .themes .theme_name }}

// ============================================================
// VARIABLES — Colors from chezmoi data
// ============================================================
$bg: {{ $t.bg }};
$fg: {{ $t.fg }};
$fg-dim: {{ $t.fg_dim }};
$accent: {{ $t.accent }};
$accent2: {{ $t.accent2 }};
$urgent: {{ $t.urgent }};
$success: {{ $t.success }};
$warning: {{ $t.warning }};
$info: {{ $t.info }};

// Island styling (pre-computed values from themes.toml)
$island-bg: {{ $t.island_bg }};
$island-border: {{ $t.island_border }};

// Layout values
$bar-radius: {{ .layout.bar_radius }}px;
$bar-border: {{ .layout.bar_border }}px;
$island-padding: {{ .layout.island_padding }}px;
$font-size: {{ .font.bar_size }}px;
$icon-size: {{ .font.icon_size }}px;
$bar-height: {{ .layout.bar_height }}px;

// ============================================================
// BASE STYLES
// ============================================================
* {
    all: unset;
    font-family: "{{ .font.mono }}", monospace;
    font-size: $font-size;
    font-weight: bold;
}

// ============================================================
// BAR CONTAINER — Transparent full-width dock
// ============================================================
.bar-container {
    background-color: transparent;
    padding: {{ .layout.bar_pad_top }}px {{ .layout.bar_pad_sides }}px {{ .layout.bar_pad_bottom }}px {{ .layout.bar_pad_sides }}px;
}

.bar-left {
    background-color: transparent;
}

// ============================================================
// ISLAND — Styled floating boxes inside transparent bar
// ============================================================
.island {
    background-color: $island-bg;
    border: $bar-border solid $island-border;
    border-radius: $bar-radius;
    color: $fg;
    padding: 4px 0;
    min-height: $bar-height;
    max-height: $bar-height;
}

// ============================================================
// WORKSPACES ISLAND
// ============================================================
.ws-island {
    padding: $island-padding;
}

.workspaces {
    // Container for workspace buttons
}

.ws {
    margin: 0 2px;
    min-width: 28px;
    transition: all 150ms ease-in-out;

    label {
        font-size: $icon-size;
    }

    &.focused {
        color: $accent;
        border-bottom: none;
    }

    &.occupied {
        color: $fg;
    }

    &.empty {
        color: $fg-dim;
    }

    &.urgent {
        color: $urgent;
        animation: urgent-pulse 0.5s ease-in-out infinite alternate;
    }

    &:hover {
        color: $accent;
    }
}

@keyframes urgent-pulse {
    from { opacity: 1; }
    to { opacity: 0.5; }
}

// ============================================================
// CLOCK ISLAND
// ============================================================
.clock-island {
    padding: $island-padding 24px;
    transform: translateX(96px);
}

// Clock uses label(markup:) with Pango spans for mixed font sizes

// ============================================================
// SYSTEM ISLAND
// ============================================================
.system-island {
    padding: $island-padding 24px;
}

.system {
    // Container for system modules
}

.system-info {
    // no padding — height determined by icon font-size + island padding
}

.sys-icon {
    font-size: $icon-size;
    color: $fg;
    margin-right: 8px;

    &.sys-icon-db {
        font-size: 18px;
    }
}

.sys-val {
    color: $fg;
    margin-right: 16px;
}

.system-cog {
    color: $fg;

    label {
        font-size: $icon-size;
    }

    &:hover {
        color: $accent;
    }
}

.system-power {
    margin-left: 16px;
    color: $fg;

    label {
        font-size: $icon-size;
    }

    &:hover {
        color: $urgent;
    }
}

.clock {
    padding: 2px 6px;
    color: $fg;
}

.sep {
    // Spacer between modules
}

.module {
    padding: 0 1px;

    .icon {
        font-size: $icon-size;
    }

    .value {
        // Default text styling
    }

    // Color variants
    &.normal {
        color: $fg;
    }

    &.dim {
        color: $fg-dim;
    }

    &.success {
        color: $success;
    }

    &.warning {
        color: $warning;
    }

    &.info {
        color: $info;
    }

    &.urgent {
        color: $urgent;
    }

    &.accent {
        color: $accent;
    }
}

// Standalone icon classes
.icon {
    font-size: $icon-size;

    &.accent {
        color: $accent;
    }

    &.urgent {
        color: $urgent;
    }

    &.success {
        color: $success;
    }

    &.warning {
        color: $warning;
    }

    &.info {
        color: $info;
    }
}

// ============================================================
// INTERACTIVE STATES
// ============================================================
button, eventbox {
    // Note: GTK CSS doesn't support 'cursor' property

    &:hover {
        opacity: 0.85;
    }

    &:active {
        opacity: 0.7;
    }
}

// ============================================================
// SCROLLBAR (if needed)
// ============================================================
scrollbar {
    background-color: transparent;

    slider {
        background-color: $fg-dim;
        border-radius: 4px;
        min-width: 4px;
        min-height: 4px;
    }
}
