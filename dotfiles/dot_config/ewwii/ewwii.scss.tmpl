// ============================================================
// Ewwii Styles — Floating Islands Theme
// Generated by chezmoi — DO NOT EDIT DIRECTLY
// ============================================================
{{- $t := index .themes .theme_name }}

// ============================================================
// VARIABLES — Colors from chezmoi data
// ============================================================
$bg: {{ $t.bg }};
$fg: {{ $t.fg }};
$fg-dim: {{ $t.fg_dim }};
$accent: {{ $t.accent }};
$accent2: {{ $t.accent2 }};
$urgent: {{ $t.urgent }};
$success: {{ $t.success }};
$warning: {{ $t.warning }};
$info: {{ $t.info }};

// Island styling
$island-bg: rgba($bg, 0.87);
$island-border: rgba({{ $t.border_active }}, 0.4);

// Layout values
$bar-radius: {{ .layout.bar_radius }}px;
$bar-border: {{ .layout.bar_border }}px;
$bar-padding: {{ .layout.bar_padding }}px;
$edge-padding: {{ .layout.edge_padding }}px;
$font-size: {{ .font.bar_size }}px;
$icon-size: {{ .font.icon_size }}px;

// ============================================================
// BASE STYLES
// ============================================================
* {
    all: unset;
    font-family: "{{ .font.mono }}", monospace;
    font-size: $font-size;
    font-weight: bold;
}

// ============================================================
// ISLAND CONTAINER
// ============================================================
.island {
    background-color: $island-bg;
    border: $bar-border solid $island-border;
    border-radius: $bar-radius;
    color: $fg;
}

// ============================================================
// WORKSPACES ISLAND
// ============================================================
.ws-island {
    padding: 0 $edge-padding;
}

.workspaces {
    // Container for workspace buttons
}

.ws {
    padding: 0 2px;
    transition: all 150ms ease-in-out;

    &.focused {
        color: $accent;
        border-bottom: 2px solid $accent;
    }

    &.occupied {
        color: $fg;
    }

    &.empty {
        color: $fg-dim;
    }

    &.urgent {
        color: $urgent;
        animation: urgent-pulse 0.5s ease-in-out infinite alternate;
    }

    &:hover {
        color: $accent;
    }
}

@keyframes urgent-pulse {
    from { opacity: 1; }
    to { opacity: 0.5; }
}

// ============================================================
// ADD BUTTON ISLAND
// ============================================================
.add-island {
    padding: 0 8px;
}

.add-btn {
    .icon {
        font-size: $icon-size;
        transition: transform 150ms ease-in-out;
    }

    &:hover .icon {
        transform: scale(1.2);
    }
}

// ============================================================
// CLOCK ISLAND
// ============================================================
.clock-island {
    padding: 0 $bar-padding;
}

.clock {
    .icon {
        font-size: $icon-size;
        color: $fg;
    }

    .date {
        color: $fg;
    }

    .time {
        color: $fg;
    }
}

// ============================================================
// SYSTEM ISLAND
// ============================================================
.system-island {
    padding: 0 $bar-padding;
}

.system {
    // Container for system modules
}

.sep {
    // Spacer between modules
}

.module {
    padding: 0 1px;

    .icon {
        font-size: $icon-size;
    }

    .value {
        // Default text styling
    }

    // Color variants
    &.normal {
        color: $fg;
    }

    &.dim {
        color: $fg-dim;
    }

    &.success {
        color: $success;
    }

    &.warning {
        color: $warning;
    }

    &.info {
        color: $info;
    }

    &.urgent {
        color: $urgent;
    }

    &.accent {
        color: $accent;
    }
}

// Standalone icon classes
.icon {
    font-size: $icon-size;

    &.accent {
        color: $accent;
    }

    &.urgent {
        color: $urgent;
    }

    &.success {
        color: $success;
    }

    &.warning {
        color: $warning;
    }

    &.info {
        color: $info;
    }
}

// ============================================================
// INTERACTIVE STATES
// ============================================================
button, eventbox {
    cursor: pointer;

    &:hover {
        opacity: 0.85;
    }

    &:active {
        opacity: 0.7;
    }
}

// ============================================================
// SCROLLBAR (if needed)
// ============================================================
scrollbar {
    background-color: transparent;

    slider {
        background-color: $fg-dim;
        border-radius: 4px;
        min-width: 4px;
        min-height: 4px;
    }
}
