{{- $t := index .themes .theme_name -}}
# Alacritty terminal — Cyberpunk Rice
# Generated by chezmoi — DO NOT EDIT DIRECTLY

[env]
TERM = "xterm-256color"

[window]
# opacity managed by picom opacity-rules (no double transparency)
padding = { x = {{ .terminal.alacritty_padding }}, y = {{ .terminal.alacritty_padding }} }
dynamic_padding = true
decorations = "Full"

[scrolling]
history = {{ .terminal.scrolling_history }}
multiplier = {{ .terminal.scrolling_multiplier }}

[font]
size = {{ .font.mono_size }}

[font.normal]
family = "{{ .font.mono }}"
style = "Regular"

[font.bold]
family = "{{ .font.mono }}"
style = "Bold"

[font.italic]
family = "{{ .font.mono }}"
style = "Italic"

[font.bold_italic]
family = "{{ .font.mono }}"
style = "Bold Italic"

[cursor]
style = { shape = "{{ .terminal.cursor_shape }}", blinking = "On" }
blink_interval = {{ .terminal.cursor_blink_interval }}
unfocused_hollow = true

[mouse]
hide_when_typing = true

# Theme colors
[colors.primary]
background = "{{ $t.bg }}"
foreground = "{{ $t.fg }}"

[colors.cursor]
text = "{{ $t.bg }}"
cursor = "{{ $t.accent }}"

[colors.vi_mode_cursor]
text = "{{ $t.bg }}"
cursor = "{{ $t.accent2 }}"

[colors.selection]
text = "{{ $t.fg }}"
background = "{{ $t.bg_light }}"

[colors.normal]
black   = "{{ $t.bg_light }}"
red     = "{{ $t.red }}"
green   = "{{ $t.green }}"
yellow  = "{{ $t.yellow }}"
blue    = "{{ $t.blue }}"
magenta = "{{ $t.magenta }}"
cyan    = "{{ $t.cyan }}"
white   = "{{ $t.fg }}"

[colors.bright]
black   = "{{ $t.fg_dim }}"
red     = "{{ $t.red }}"
green   = "{{ $t.green }}"
yellow  = "{{ $t.yellow }}"
blue    = "{{ $t.info }}"
magenta = "{{ $t.magenta }}"
cyan    = "{{ $t.cyan }}"
white   = "{{ $t.fg }}"

[[keyboard.bindings]]
key = "N"
mods = "Control|Shift"
action = "SpawnNewInstance"
