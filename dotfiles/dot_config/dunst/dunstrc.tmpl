{{- $t := index .themes .theme_name -}}
# Dunst notification config — Cyberpunk Rice
# Generated by chezmoi — DO NOT EDIT DIRECTLY

[global]
    # Display
    monitor = 0
    follow = mouse
    origin = top-right
    offset = {{ .dunst.offset_x }}x{{ .dunst.offset_y }}
    width = ({{ .dunst.width_min }}, {{ .dunst.width_max }})
    height = {{ .dunst.height }}
    notification_limit = {{ .dunst.notification_limit }}

    # Appearance
    frame_width = {{ .dunst.frame_width }}
    frame_color = "{{ $t.border_active }}"
    corner_radius = {{ .dunst.corner_radius }}
    separator_height = {{ .dunst.separator_height }}
    separator_color = frame
    padding = {{ .dunst.padding }}
    horizontal_padding = {{ .dunst.horizontal_padding }}
    text_icon_padding = {{ .dunst.text_icon_padding }}
    gap_size = {{ .dunst.gap_size }}
    transparency = {{ .dunst.transparency }}

    # Text
    font = {{ .font.mono }} {{ .font.mono_size }}
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = {{ .dunst.show_age_threshold }}
    ellipsize = end

    # Icons
    icon_position = left
    min_icon_size = {{ .dunst.icon_size_min }}
    max_icon_size = {{ .dunst.icon_size_max }}
    icon_theme = {{ .system.icon_theme }}
    enable_recursive_icon_lookup = true

    # History
    sticky_history = yes
    history_length = {{ .dunst.history_length }}

    # Misc
    dmenu = rofi -dmenu -theme ~/.config/rofi/themes/launcher.rasi
    browser = xdg-open
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[urgency_low]
    background = "{{ $t.bg }}ee"
    foreground = "{{ $t.fg_dim }}"
    frame_color = "{{ $t.border_inactive }}"
    timeout = {{ .dunst.timeout_low }}
    highlight = "{{ $t.info }}"

[urgency_normal]
    background = "{{ $t.bg }}ee"
    foreground = "{{ $t.fg }}"
    frame_color = "{{ $t.accent }}"
    timeout = {{ .dunst.timeout_normal }}
    highlight = "{{ $t.accent }}"

[urgency_critical]
    background = "{{ $t.bg }}ee"
    foreground = "{{ $t.fg }}"
    frame_color = "{{ $t.urgent }}"
    timeout = {{ .dunst.timeout_critical }}
    highlight = "{{ $t.urgent }}"
