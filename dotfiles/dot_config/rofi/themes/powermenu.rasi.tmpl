{{- $t := index .themes .theme_name -}}
/* Rofi Power Menu â€” Cyberpunk Theme */

* {
    bg:      {{ $t.bg }}ee;
    fg:      {{ $t.fg }};
    fg-dim:  {{ $t.fg_dim }};
    accent:  {{ $t.accent }};
    urgent:  {{ $t.urgent }};
    border:  {{ $t.border_active }};

    background-color: transparent;
    text-color: @fg;
    font: "{{ .font.icon }} {{ .rofi.icon_size_powermenu }}";
}

window {
    width: {{ .rofi.powermenu_width }}px;
    transparency: "real";
    background-color: @bg;
    border: 1px;
    border-color: @border;
    border-radius: {{ .layout.corner_radius }}px;
    padding: {{ .rofi.padding_powermenu }}px;
}

mainbox {
    children: [ message, listview ];
    spacing: {{ .rofi.padding_large }}px;
}

message {
    padding: {{ .rofi.message_padding }}px;
}

textbox {
    font: "{{ .font.mono }} {{ .font.mono_size }}";
    horizontal-align: 0.5;
    text-color: @accent;
}

listview {
    lines: {{ .rofi.powermenu_lines }};
    columns: {{ .rofi.powermenu_columns }};
    spacing: {{ .rofi.spacing_large }}px;
    cycle: true;
    fixed-height: true;
    scrollbar: false;
}

element {
    padding: {{ .rofi.element_padding_powermenu }};
    border-radius: {{ .rofi.border_radius_powermenu }}px;
    horizontal-align: 0.5;
}

element selected {
    background-color: @accent;
    text-color: @bg;
}
