{{- $t := index .themes .theme_name -}}
/* Rofi Control Center â€” Cyberpunk Theme */

* {
    bg:      {{ $t.bg }}ee;
    fg:      {{ $t.fg }};
    fg-dim:  {{ $t.fg_dim }};
    accent:  {{ $t.accent }};
    urgent:  {{ $t.urgent }};
    border:  {{ $t.border_active }};
    bg-light: {{ $t.bg_light }};

    background-color: transparent;
    text-color: @fg;
    font: "{{ .font.mono }} {{ .font.mono_size }}";
}

window {
    width: 350px;
    location: northeast;
    x-offset: -20;
    y-offset: 50;
    transparency: "real";
    background-color: @bg;
    border: 1px;
    border-color: @border;
    border-radius: {{ .layout.corner_radius }}px;
    padding: 15px;
}

mainbox {
    children: [ message, listview ];
    spacing: 15px;
}

message {
    padding: 10px;
}

textbox {
    horizontal-align: 0.5;
    text-color: @accent;
}

listview {
    lines: 5;
    columns: 1;
    spacing: 8px;
    cycle: true;
    fixed-height: true;
    scrollbar: false;
}

element {
    padding: 10px 14px;
    border-radius: 8px;
}

element selected {
    background-color: {{ $t.bg_light }}cc;
    text-color: @accent;
}
