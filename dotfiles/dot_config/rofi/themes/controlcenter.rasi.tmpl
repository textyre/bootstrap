{{- $t := index .themes .theme_name -}}
/* Rofi Control Center â€” Cyberpunk Theme */

* {
    bg:      {{ $t.bg }}ee;
    fg:      {{ $t.fg }};
    fg-dim:  {{ $t.fg_dim }};
    accent:  {{ $t.accent }};
    urgent:  {{ $t.urgent }};
    border:  {{ $t.border_active }};
    bg-light: {{ $t.bg_light }};

    background-color: transparent;
    text-color: @fg;
    font: "{{ .font.mono }} {{ .font.mono_size }}";
}

window {
    width: {{ .rofi.controlcenter_width }}px;
    location: northeast;
    x-offset: {{ .rofi.controlcenter_x_offset }};
    y-offset: {{ .rofi.controlcenter_y_offset }};
    transparency: "real";
    background-color: @bg;
    border: 1px;
    border-color: @border;
    border-radius: {{ .layout.corner_radius }}px;
    padding: {{ .rofi.padding_medium }}px;
}

mainbox {
    children: [ message, listview ];
    spacing: {{ .rofi.spacing_large }}px;
}

message {
    padding: {{ .rofi.message_padding }}px;
}

textbox {
    horizontal-align: 0.5;
    text-color: @accent;
}

listview {
    lines: {{ .rofi.controlcenter_lines }};
    columns: {{ .rofi.controlcenter_columns }};
    spacing: {{ .rofi.spacing_controlcenter }}px;
    cycle: true;
    fixed-height: true;
    scrollbar: false;
}

element {
    padding: {{ .rofi.element_padding_medium }};
    border-radius: {{ .rofi.border_radius_large }}px;
}

element selected {
    background-color: {{ $t.bg_light }}cc;
    text-color: @accent;
}
