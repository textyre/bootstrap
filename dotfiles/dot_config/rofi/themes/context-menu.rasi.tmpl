{{- $t := index .themes .theme_name -}}
/* Rofi Context Menu â€” Compact dropdown */

* {
    bg:      {{ $t.bg }}ee;
    fg:      {{ $t.fg }};
    fg-dim:  {{ $t.fg_dim }};
    accent:  {{ $t.accent }};
    urgent:  {{ $t.urgent }};
    border:  {{ $t.border_active }};
    bg-light: {{ $t.bg_light }};

    background-color: transparent;
    text-color: @fg;
    font: "{{ .font.mono }} {{ .font.mono_size }}";
}

window {
    width: {{ .rofi.context_menu_width }}px;
    location: northwest;
    x-offset: {{ .rofi.context_x_offset }};
    y-offset: {{ .rofi.context_y_offset }};
    transparency: "real";
    background-color: @bg;
    border: 1px;
    border-color: @border;
    border-radius: {{ .layout.corner_radius }}px;
    padding: {{ .rofi.padding_small }}px;
}

mainbox {
    children: [ inputbar, listview ];
    spacing: {{ .rofi.spacing_small }}px;
}

inputbar {
    children: [ prompt ];
    padding: {{ .rofi.inputbar_padding_context }};
    background-color: @bg-light;
    border-radius: {{ .rofi.border_radius_small }}px;
}

prompt {
    text-color: @accent;
}

listview {
    lines: {{ .rofi.context_menu_lines }};
    columns: 1;
    spacing: {{ .rofi.spacing_context }}px;
    cycle: true;
    fixed-height: true;
    scrollbar: false;
}

element {
    padding: {{ .rofi.element_padding_small }};
    border-radius: {{ .rofi.border_radius_small }}px;
}

element selected {
    background-color: {{ $t.bg_light }}cc;
    text-color: @accent;
}
