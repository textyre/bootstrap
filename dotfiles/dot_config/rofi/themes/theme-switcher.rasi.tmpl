{{- $t := index .themes .theme_name -}}
/* Rofi Theme Switcher â€” Cyberpunk Theme */

* {
    bg:      {{ $t.bg }}ee;
    bg-alt:  {{ $t.bg_light }}cc;
    fg:      {{ $t.fg }};
    fg-dim:  {{ $t.fg_dim }};
    accent:  {{ $t.accent }};
    border:  {{ $t.border_active }};

    background-color: transparent;
    text-color: @fg;
    font: "{{ .font.mono }} {{ .font.mono_size }}";
}

window {
    width: {{ .rofi.theme_switcher_width }}px;
    transparency: "real";
    background-color: @bg;
    border: 1px;
    border-color: @border;
    border-radius: {{ .layout.corner_radius }}px;
    padding: {{ .rofi.padding_large }}px;
}

mainbox {
    spacing: {{ .rofi.spacing_medium }}px;
    children: [ inputbar, listview ];
}

inputbar {
    children: [ prompt ];
    background-color: @bg-alt;
    border-radius: {{ .rofi.border_radius_large }}px;
    padding: {{ .rofi.spacing_medium }}px;
}

prompt {
    text-color: @accent;
}

listview {
    lines: {{ .rofi.theme_switcher_lines }};
    columns: 1;
    fixed-height: false;
    spacing: {{ .rofi.spacing_element }}px;
    scrollbar: false;
}

element {
    padding: {{ .rofi.element_padding_medium }};
    border-radius: {{ .rofi.border_radius_small }}px;
}

element selected {
    background-color: @bg-alt;
    text-color: @accent;
}

element-text {
    vertical-align: 0.5;
}
