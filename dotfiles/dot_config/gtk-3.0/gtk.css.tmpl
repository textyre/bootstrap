/* GTK3 custom CSS
 * Generated by chezmoi — DO NOT EDIT DIRECTLY
 * border-radius synced with picom corner-radius ({{ .layout.corner_radius }}px)
 */

/* === CSD windows === */
window.csd {
  border-radius: {{ .layout.corner_radius }}px;
}

window.csd decoration {
  border-radius: {{ .layout.corner_radius }}px;
}

/* === Context menus — rounded corners (synced with picom) === */
menu,
.menu,
.context-menu {
  margin: 4px;
  padding: 6px;
  background-clip: border-box;
  border-radius: {{ .layout.corner_radius }}px;
}

/* Popup window decoration — shadow + corners */
.csd.popup decoration {
  border-radius: {{ .layout.corner_radius }}px;
  box-shadow: 0 2px 2.4px -1px rgba(0, 0, 0, 0.2),
              0 4px 3px 0 rgba(0, 0, 0, 0.14),
              0 1px 6px 0 rgba(0, 0, 0, 0.12);
}

/* === Menu items === */
menu menuitem,
.menu menuitem,
.context-menu menuitem {
  margin: 0;
  border-radius: 6px;
  padding: 7px 6px;
}

/* === Separator === */
menu separator {
  margin: 6px;
}
