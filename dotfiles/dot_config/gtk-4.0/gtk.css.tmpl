{{- $t := index .themes .theme_name }}
/* GTK4 custom CSS — Cyberpunk Rice
 * Generated by chezmoi — DO NOT EDIT DIRECTLY
 * border-radius synced with picom corner-radius ({{ .layout.corner_radius }}px)
 */

/* === Color overrides from theme "{{ .theme_name }}" === */
@define-color theme_bg_color {{ $t.bg }};
@define-color theme_fg_color {{ $t.fg }};
@define-color theme_base_color {{ $t.bg }};
@define-color theme_text_color {{ $t.fg }};
@define-color theme_selected_bg_color {{ $t.accent2 }};
@define-color theme_selected_fg_color {{ $t.bg }};
@define-color theme_tooltip_bg_color {{ $t.bg_light }};
@define-color theme_tooltip_fg_color {{ $t.fg }};
@define-color theme_unfocused_bg_color {{ $t.bg }};
@define-color theme_unfocused_fg_color {{ $t.fg_dim }};
@define-color theme_unfocused_base_color {{ $t.bg_alt }};
@define-color theme_unfocused_text_color {{ $t.fg_dim }};
@define-color theme_unfocused_selected_bg_color {{ $t.fg_dim }};
@define-color theme_unfocused_selected_fg_color {{ $t.bg }};
@define-color borders {{ $t.border_inactive }};
@define-color unfocused_borders {{ $t.border_inactive }};
@define-color warning_color {{ $t.warning }};
@define-color error_color {{ $t.urgent }};
@define-color success_color {{ $t.success }};
@define-color link_color {{ $t.accent }};
@define-color content_view_bg {{ $t.bg_alt }};

/* CSD windows */
window.csd {
  border-radius: {{ .layout.corner_radius }}px;
}

/* Popover menus (GtkPopoverMenu) — rounded corners */
popover.menu > contents {
  border-radius: {{ .layout.corner_radius }}px;
}
