{{- $t := index .themes .theme_name -}}
# Starship prompt — Cyberpunk Rice
# Generated by chezmoi — DO NOT EDIT DIRECTLY

format = """
[]({{ $t.accent }})\
$os\
[](bg:{{ $t.bg_light }} fg:{{ $t.accent }})\
$directory\
[](fg:{{ $t.bg_light }} bg:{{ $t.blue }})\
$git_branch\
$git_status\
[](fg:{{ $t.blue }})\
$fill\
$cmd_duration\
$line_break\
$character"""

[os]
disabled = false
style = "bg:{{ $t.accent }} fg:{{ $t.bg }}"

[os.symbols]
Arch = " "

[directory]
style = "bg:{{ $t.bg_light }} fg:{{ $t.fg }}"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = ".../"

[git_branch]
symbol = " "
style = "bg:{{ $t.blue }} fg:{{ $t.bg }}"
format = "[ $symbol $branch ]($style)"

[git_status]
style = "bg:{{ $t.blue }} fg:{{ $t.bg }}"
format = "[$all_status$ahead_behind]($style)"

[fill]
symbol = " "

[cmd_duration]
min_time = 2000
format = "[ $duration]($style)"
style = "fg:{{ $t.fg_dim }}"

[character]
success_symbol = "[>](bold {{ $t.accent }})"
error_symbol = "[>](bold {{ $t.urgent }})"
