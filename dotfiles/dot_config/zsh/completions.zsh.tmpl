{{- $t := index .themes .theme_name -}}
# ~/.config/zsh/completions.zsh â€” IDE-like completion system

autoload -Uz compinit && compinit

# Basic settings
zstyle ':completion:*' menu select
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}'
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}"

# Fuzzy matching
zstyle ':completion:*' completer _complete _match _approximate
zstyle ':completion:*:match:*' original only
zstyle ':completion:*:approximate:*' max-errors 1 numeric

# Grouping and descriptions
zstyle ':completion:*' group-name ''
zstyle ':completion:*:descriptions' format '%F{{{ $t.accent }}}-- %d --%f'
zstyle ':completion:*:warnings' format '%F{{{ $t.error }}}-- no matches --%f'

# Cache completions
zstyle ':completion:*' use-cache on
zstyle ':completion:*' cache-path ~/.zsh/cache

# Process completions
zstyle ':completion:*:*:kill:*:processes' list-colors '=(#b) #([0-9]#)*=0=01;31'
zstyle ':completion:*:kill:*' command 'ps -u $USER -o pid,%cpu,tty,cputime,cmd'
