{{- $t := index .themes .theme_name -}}
# i3 config — Cyberpunk Rice
# Generated by chezmoi — DO NOT EDIT DIRECTLY

# === VARIABLES ===
set $mod Mod4
set $term alacritty
set $menu rofi -show drun -theme ~/.config/rofi/themes/launcher.rasi

# Workspace names (Nerd Font icons)
set $ws1 "1: "
set $ws2 "2: "
set $ws3 "3: "
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# === APPEARANCE ===
font pango:{{ .font.mono }} {{ .font.mono_size }}

# Gaps
gaps inner {{ .layout.gaps_inner }}
gaps outer {{ .layout.gaps_outer }}
smart_gaps off

# Borders
default_border pixel {{ .layout.border_size }}
default_floating_border pixel {{ .layout.border_size }}
hide_edge_borders none

# Colors              border                     bg                      text               indicator                child_border
client.focused          {{ $t.border_active }}    {{ $t.bg_light }}       {{ $t.fg }}        {{ $t.accent2 }}         {{ $t.border_active }}
client.focused_inactive {{ $t.border_inactive }}  {{ $t.bg }}             {{ $t.fg_dim }}    {{ $t.bg_light }}        {{ $t.border_inactive }}
client.unfocused        {{ $t.border_inactive }}  {{ $t.bg }}             {{ $t.fg_dim }}    {{ $t.bg_light }}        {{ $t.border_inactive }}
client.urgent           {{ $t.border_urgent }}    {{ $t.urgent }}         {{ $t.fg }}        {{ $t.urgent }}          {{ $t.border_urgent }}
client.placeholder      {{ $t.bg }}               {{ $t.bg }}             {{ $t.fg_dim }}    {{ $t.bg }}              {{ $t.bg }}
client.background       {{ $t.bg }}

# === KEYBINDINGS: CORE ===
bindsym $mod+Return exec $term
bindsym $mod+space exec $menu
bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# === KEYBINDINGS: NAVIGATION (vim + arrows) ===
# Focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# === KEYBINDINGS: LAYOUT ===
bindsym $mod+b split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+a focus parent

# === KEYBINDINGS: RESIZE MODE ===
mode "resize" {
    bindsym h resize shrink width 5 px or 5 ppt
    bindsym j resize grow height 5 px or 5 ppt
    bindsym k resize shrink height 5 px or 5 ppt
    bindsym l resize grow width 5 px or 5 ppt
    bindsym Left resize shrink width 5 px or 5 ppt
    bindsym Down resize grow height 5 px or 5 ppt
    bindsym Up resize shrink height 5 px or 5 ppt
    bindsym Right resize grow width 5 px or 5 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# === KEYBINDINGS: GAPS ===
bindsym $mod+Ctrl+minus gaps inner current minus 2
bindsym $mod+Ctrl+plus gaps inner current plus 2
bindsym $mod+Shift+Ctrl+minus gaps outer current minus 2
bindsym $mod+Shift+Ctrl+plus gaps outer current plus 2
bindsym $mod+Ctrl+0 gaps inner current set {{ .layout.gaps_inner }}; gaps outer current set {{ .layout.gaps_outer }}

# === WORKSPACES ===
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# === WINDOW RULES ===
# Assign apps to workspaces
assign [class="firefox"] $ws1
assign [class="Brave-browser"] $ws1
assign [class="Code"] $ws2
assign [class="Cursor"] $ws2
assign [class="Alacritty"] $ws3

# Floating rules
for_window [class="Thunar"] floating enable
for_window [class="Lxappearance"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class="flameshot"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="dialog"] floating enable
for_window [window_type="dialog"] floating enable

# === KEYBINDINGS: MEDIA ===
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 5
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 5
bindsym XF86AudioMute exec --no-startup-id pamixer -t
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

# === KEYBINDINGS: CUSTOM ===
# Lock screen
bindsym $mod+Ctrl+q exec --no-startup-id ~/.local/bin/lock-screen

# Screenshot
bindsym Print exec --no-startup-id flameshot gui
bindsym $mod+Print exec --no-startup-id flameshot screen
bindsym $mod+Shift+Print exec --no-startup-id flameshot full -p ~/Pictures/screenshots

# Power menu
bindsym $mod+Shift+e exec --no-startup-id ~/.config/rofi/scripts/powermenu.sh

# Theme switcher
bindsym $mod+t exec --no-startup-id ~/.config/rofi/scripts/theme-switcher.sh

# Wallpaper cycling
bindsym $mod+Mod1+w exec --no-startup-id ~/.local/bin/wallpaper-cycle next
bindsym $mod+Mod1+Shift+w exec --no-startup-id ~/.local/bin/wallpaper-cycle prev

# Wallpaper picker (rofi)
bindsym $mod+Shift+w exec --no-startup-id ~/.config/rofi/scripts/wallpaper-picker.sh

# Clipboard manager
bindsym $mod+c exec --no-startup-id rofi -modi "clipboard:greenclip print" -show clipboard -theme ~/.config/rofi/themes/launcher.rasi

# File manager
bindsym $mod+n exec --no-startup-id thunar

# === AUTOSTART ===
exec_always --no-startup-id ~/.config/polybar/launch.sh
exec_always --no-startup-id ~/.local/bin/launch-picom
exec_always --no-startup-id sh -c 'pkill -x dunst; exec dunst'
exec_always --no-startup-id sh -c 'pkill -x nm-applet; exec nm-applet'
exec_always --no-startup-id sh -c 'pkill -x greenclip; exec greenclip daemon'
exec --no-startup-id ~/.local/bin/wallpaper-random
exec --no-startup-id xss-lock --transfer-sleep-lock -- ~/.local/bin/lock-screen
