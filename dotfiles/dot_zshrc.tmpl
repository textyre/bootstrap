ZDOTDIR="${XDG_CONFIG_HOME:-$HOME/.config}/zsh"

# Load modules in order
_zsh_modules=(
    options      # Shell options, history, env vars
    keybindings  # Key bindings
    completions  # Completion system
    aliases      # Shell aliases
    plugins      # Plugin loading (syntax-hl, autosuggestions, fzf)
    warp         # WARP-style features (blocks, palette, workflows)
)

for mod in "${_zsh_modules[@]}"; do
    # Try .zsh first, then .zsh.tmpl (chezmoi generates without .tmpl)
    if [[ -f "$ZDOTDIR/$mod.zsh" ]]; then
        source "$ZDOTDIR/$mod.zsh"
    fi
done
unset mod _zsh_modules

# Local overrides (not in git)
[[ -f "$ZDOTDIR/local.zsh" ]] && source "$ZDOTDIR/local.zsh"

# Starship prompt (must be last)
eval "$(starship init zsh)"
