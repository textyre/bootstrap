#!/bin/sh
# ~/.xprofile — sourced by LightDM before i3 starts
# Generated by chezmoi — DO NOT EDIT DIRECTLY

# Add ~/.local/bin to PATH for user scripts
export PATH="$HOME/.local/bin:$PATH"

# Merge Xresources (font rendering, DPI, cursor)
[ -f ~/.Xresources ] && xrdb -merge ~/.Xresources

# Set cursor
xsetroot -cursor_name left_ptr
