# Managed by Ansible — role: power_management
# systemd sleep configuration — /etc/systemd/sleep.conf
# See: man systemd.sleep.conf(5)
[Sleep]
HibernateMode={{ power_management_hibernate_mode }}
{% if power_management_suspend_state %}
SuspendState={{ power_management_suspend_state }}
{% endif %}
{% if power_management_hibernate_delay_sec %}
HibernateDelaySec={{ power_management_hibernate_delay_sec }}
{% endif %}
