---
# Ansible-lint configuration
profile: production

# Exclude paths
exclude_paths:
  - .venv/
  - .molecule/
  - .cache/

# Enable specific rules
enable_list:
  - no-changed-when
  - no-handler
  - no-jinja-when
  - no-relative-paths

# Skip specific rules if needed
skip_list:
  - yaml[line-length]  # We use 120 chars

# Set warning level for some rules
warn_list:
  - name[casing]              # Warn but don't fail on task name casing
  - experimental              # Warn on experimental features
  - var-naming                # Project uses intentional cross-role _rpt_* and _verify_* patterns
  - name[template]            # vm role uses {{ label }}: task name pattern intentionally
  - command-instead-of-module # verify files use systemctl is-enabled/is-active for state reads
  - ignore-errors             # power_management uses conditional soft-assert pattern
  - jinja[spacing]            # block scalars with {%- are correct but trigger false positives
  - key-order[task]           # minor style preference, not a correctness issue

# Use offline mode to avoid external calls
offline: false
