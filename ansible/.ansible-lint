---
# Ansible-lint configuration
profile: production

# Exclude paths
exclude_paths:
  - .venv/
  - .molecule/
  - .cache/

# Enable specific rules
enable_list:
  - no-changed-when
  - no-handler
  - no-jinja-when
  - no-relative-paths

# Skip specific rules if needed
skip_list:
  - yaml[line-length]  # We use 120 chars

# Set warning level for some rules
warn_list:
  - name[casing]              # Warn but don't fail on task name casing
  - experimental              # Warn on experimental features
  - var-naming                # Cross-role shared vars (_rpt_*) used via include_role/tasks_from
  - name[template]            # vm role uses {{ label }}: prefix pattern for task grouping (~25 tasks)
  - command-instead-of-module # verify tasks use `systemctl is-enabled/is-active` for queries only
  - key-order[task]           # purely stylistic ordering preference

# Use offline mode to avoid external calls
offline: false
