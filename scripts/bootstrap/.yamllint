---
# YAML lint configuration for Ansible
extends: default

rules:
  line-length:
    max: 120
    level: warning

  # Allow inline mappings (like {key: value})
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1

  # Ansible templates use Jinja2, allow variables
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']

  # Allow comment indentation
  comments-indentation: disable

  # Allow document start without ---
  document-start: disable

  # Required by ansible-lint
  comments:
    min-spaces-from-content: 1

  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore: |
  .venv/
  .molecule/
  .cache/
