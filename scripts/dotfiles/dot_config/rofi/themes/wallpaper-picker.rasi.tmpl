{{- $t := index .themes .theme_name -}}
/* Rofi Wallpaper Picker â€” Cyberpunk Theme */

* {
    bg:      {{ $t.bg }}ee;
    bg-alt:  {{ $t.bg_light }}cc;
    fg:      {{ $t.fg }};
    fg-dim:  {{ $t.fg_dim }};
    accent:  {{ $t.accent }};
    border:  {{ $t.border_active }};

    background-color: transparent;
    text-color: @fg;
    font: "{{ .font.mono }} {{ .font.mono_size }}";
}

window {
    width: 450px;
    transparency: "real";
    background-color: @bg;
    border: 1px;
    border-color: @border;
    border-radius: {{ .layout.corner_radius }}px;
    padding: 20px;
}

mainbox {
    spacing: 12px;
    children: [ inputbar, listview ];
}

inputbar {
    children: [ prompt, entry ];
    background-color: @bg-alt;
    border-radius: 8px;
    padding: 12px;
}

prompt {
    text-color: @accent;
    padding: 0 8px 0 0;
}

entry {
    placeholder: "Filter...";
    placeholder-color: @fg-dim;
}

listview {
    lines: 10;
    columns: 1;
    fixed-height: true;
    spacing: 4px;
    scrollbar: false;
}

element {
    padding: 8px 12px;
    border-radius: 6px;
}

element selected {
    background-color: @bg-alt;
    text-color: @accent;
}

element-text {
    vertical-align: 0.5;
}
