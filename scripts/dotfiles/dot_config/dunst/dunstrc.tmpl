{{- $t := index .themes .theme_name -}}
# Dunst notification config — Cyberpunk Rice
# Generated by chezmoi — DO NOT EDIT DIRECTLY

[global]
    # Display
    monitor = 0
    follow = mouse
    origin = top-right
    offset = 20x20
    width = (280, 400)
    height = 150
    notification_limit = 5

    # Appearance
    frame_width = 1
    frame_color = "{{ $t.border_active }}"
    corner_radius = 8
    separator_height = 2
    separator_color = frame
    padding = 12
    horizontal_padding = 14
    text_icon_padding = 12
    gap_size = 4
    transparency = 10

    # Text
    font = {{ .font.mono }} {{ .font.mono_size }}
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 30
    ellipsize = end

    # Icons
    icon_position = left
    min_icon_size = 24
    max_icon_size = 48
    icon_theme = Papirus-Dark
    enable_recursive_icon_lookup = true

    # History
    sticky_history = yes
    history_length = 20

    # Misc
    dmenu = rofi -dmenu -theme ~/.config/rofi/themes/launcher.rasi
    browser = xdg-open
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[urgency_low]
    background = "{{ $t.bg }}ee"
    foreground = "{{ $t.fg_dim }}"
    frame_color = "{{ $t.border_inactive }}"
    timeout = 5
    highlight = "{{ $t.info }}"

[urgency_normal]
    background = "{{ $t.bg }}ee"
    foreground = "{{ $t.fg }}"
    frame_color = "{{ $t.accent }}"
    timeout = 8
    highlight = "{{ $t.accent }}"

[urgency_critical]
    background = "{{ $t.bg }}ee"
    foreground = "{{ $t.fg }}"
    frame_color = "{{ $t.urgent }}"
    timeout = 0
    highlight = "{{ $t.urgent }}"
