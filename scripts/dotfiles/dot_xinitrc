#!/bin/bash
# Start screen locker helpers and exec i3

# [DISPLAY_CONFIG_START]
# Display configuration will be injected here by display manager
# [DISPLAY_CONFIG_END]

if command -v xss-lock >/dev/null 2>&1; then
  xss-lock -- slock &
fi

if command -v xautolock >/dev/null 2>&1; then
  xautolock -time 10 -locker slock &
fi

exec i3
