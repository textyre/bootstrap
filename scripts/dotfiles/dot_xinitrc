#!/bin/bash
# ~/.xinitrc — Cyberpunk Rice
# Generated by chezmoi — DO NOT EDIT DIRECTLY

# Cursor
xsetroot -cursor_name left_ptr

# Merge Xresources
[ -f ~/.Xresources ] && xrdb -merge ~/.Xresources

# Screen locker
if command -v xss-lock >/dev/null 2>&1; then
  xss-lock -- ~/.local/bin/lock-screen &
fi

if command -v xautolock >/dev/null 2>&1; then
  xautolock -time 10 -locker ~/.local/bin/lock-screen &
fi

exec i3
